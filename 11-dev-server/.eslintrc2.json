{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
        "linebreak-style": ["error", "windows"],
        "indent": ["error", 4],
        "no-console": "warn",
        "no-unused-vars": "off",
        "prefer-const": "off",
        "spaced-comment": ["error", "always"],
        "no-plusplus": 0,
        "one-var": 0,
        "no-bitwise": 0

    }
}
